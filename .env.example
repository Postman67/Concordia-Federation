# Server
PORT=3000
NODE_ENV=development

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=concordia_federation
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# JWT — use a long random string (e.g. openssl rand -hex 64)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Bcrypt — higher = slower hash but more secure (12-14 recommended for prod)
BCRYPT_SALT_ROUNDS=12
